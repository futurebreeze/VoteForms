<div class="vtf [[+class]]" data-rating-max="[[+form.rating_max]]">
    <div class="row">
        <span class="vtf-field vtf-field-name">
            [[+form.name]] [[+field.name]]:
        </span>
        [[+stars]]
        <span class="vtf-field vtf-field-rating badge">
            [[+rating]]
        </span>
    </div>
    <div class="row">
        <span class="vtf-field vtf-field-name">
            [[%voteforms_users_count]]
        </span>
        <span class="vtf-field vtf-field-users-count badge">
             [[+users_count]]
        </span>
    </div>
</div>